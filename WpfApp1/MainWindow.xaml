<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="600" MinHeight="500" MinWidth="500" >
    <Grid>
        <DockPanel>
            <TextBlock  Background="Purple" DockPanel.Dock="Top"  Height="100"></TextBlock>
            <TextBlock  Background="Purple" DockPanel.Dock="Left" Width="100"></TextBlock>
            <TextBlock  Background="Green" DockPanel.Dock="Bottom"  Height="100"></TextBlock>
            <TextBlock Background="Green" DockPanel.Dock="Right" Width="100"></TextBlock>
            <TextBlock></TextBlock>
            <DockPanel>
                <TextBlock Background="Orange" DockPanel.Dock="Left" Width="100"></TextBlock>
                <TextBlock Background="Pink" DockPanel.Dock="Top"  Height="100"></TextBlock>
                <TextBlock Background="Orange" DockPanel.Dock="Bottom"  Height="100"></TextBlock>
                <TextBlock Background="Pink" DockPanel.Dock="Right" Width="100"></TextBlock>
                <TextBlock Background="Black"></TextBlock>
            </DockPanel>
        </DockPanel>
        
    </Grid>
</Window>
